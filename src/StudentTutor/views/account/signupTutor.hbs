                        <i class="fa fa-envelope"></i>
                        <input type="text" placeholder="Email" name="email" required>
                    </div>
                    <div class="input-box">
                        <i class="fa fa-lock"></i>
                        <input type="password" placeholder="Mật khẩu" name="password" required>
                    </div>
                    <div class="input-box">
                        <i class="fa fa-lock"></i>
                        <input type="password" name = "password" placeholder="Xác nhận mật khẩu" name="password" required>
                    </div>
                  
                  <h4>Thông tin tài khoản</h4>
                    <div class="input-box">
                        <i class="fa fa-user"></i>
                        <input type="text" placeholder="Họ và tên" name="fullname" required>
                    </div>
                    <div class="input-box">
                        <i class="fa fa-user"></i>
                        <input type="text" placeholder="Tên hiển thị" name="dis_playname" required>
                    </div>

                    <div class="input-box">
                        <i class="fa fa-phone"></i>
                        <input type="tel" placeholder="Số điện thoại" name="phone" required>
                    </div>
                    <div class="input-box">
                        <i class="fas fa-location-arrow"></i>
                        <input type="text" placeholder="Địa chỉ" name="address" required>

                    </div>
                    <div class="input-box" style="display: flex;flex-wrap: wrap;border: none;margin: 0px;padding: 0px; margin-bottom: 10px;">
                        <div class="ngaysinh-gioitinh" style="display: flex;flex-wrap: wrap;width:48%;border: 1px solid black;">
                            <span style="margin-top: 10px;"><i class="fas fa-birthday-cake"></i></span>                   
                            <input style="width: 80%;" name="birthday" class="form-control" placeholder="Ngày sinh" type="text" onfocus="(this.type='date')" onblur="if(this.value==''){this.type='text'}" id="student-birthday">
                        </div>
                        <div class="ngaysinh-gioitinh" style="width:40%;margin-left:4%;border: 1px solid black;">
                            <i class="fas fa-transgender-alt"></i>                      
                            <select id="gioitinh" required style="border: none;background-color: none;width: 80%;">
                                <option>Giới tính</option>
                                <option value="nam">Nam</option>
                                <option value="nu">Nữ</option>
                            </select>
                        </div>
                    </div>
                    
                    <!--copy ngaysinh gioitinh-->
                    <div class="input-box" style="display: flex;flex-wrap: wrap;border: none;margin: 0px;padding: 0px; margin-bottom: 10px;">
