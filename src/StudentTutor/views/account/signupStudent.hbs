<div class="signup-form">
    <div class="card bg-light">
        <div class="card-body mx-auto">
            <div class="row justify-content-around">
               <div class="col-lg-7 col-12 row justify-content-center">
                   <div class="col-12 col-md-10">
                        <a href="/signup" class="turn-back-link"><i class="fas fa-long-arrow-alt-left"></i>&nbsp;Thay đổi vai trò</a>
                    </div>
               </div>
            </div>
           
            <form action="/signup-student" method="POST" id="form-student-signup">
                <h4 class="card-title mt-3 text-center">Tạo tài khoản học sinh</h4>
                <div class="row justify-content-center">
                    <div class="col-lg-7 col-12 row justify-content-center">
                        <div class="col-12 col-md-10">
                            <p>Thông tin đăng nhập</p>
                        </div>
                        <div class="form-group input-group col-12 col-md-10">
                            <div class="input-group-prepend" >
                                <label class="input-group-text" for="student-email"> <i class="fa fa-envelope"></i> </label>
                            </div>
                            <input name="email" class="form-control" placeholder="Email" type="email" id="student-email">
                        </div> <!-- form-group// -->

                        <div class="form-group input-group col-12 col-md-10">
                            <div class="input-group-prepend">
                                <label class="input-group-text" for="student-password"> <i class="fa fa-lock"></i> </label>
                            </div>
                            <input name="password" class="form-control" placeholder="Mật khẩu" type="password" id="student-password">
                        </div> <!-- form-group// -->
                        <div class="form-group input-group col-12 col-md-10">
                            <div class="input-group-prepend">
                                <label class="input-group-text" for="student-retype-password"> <i class="fa fa-lock"></i></label>
                            </div>
                            <input name="retypePassword" class="form-control" placeholder="Nhập lại mật khẩu" type="password" id="student-retype-password">
                        </div> <!-- form-group// -->                      
                    </div>
                    <div class="col-lg-7 col-12 row justify-content-center">
                        <div class="col-12 col-md-10">
                            <p>Thông tin cá nhân</p>
                        </div>
                        <div class="form-group input-group col-12 col-md-10">
                            <div class="input-group-prepend">
                                <label class="input-group-text" for="student-fullname"> <i class="fa fa-user"></i> </label>
                            </div>
                            <input name="fullname" class="form-control" placeholder="Họ và tên" type="text" id="student-fullname">
                        </div> <!-- form-group// -->
                        
                        <div class="form-group input-group col-12 col-md-10">
                            <div class="input-group-prepend">
                                <label class="input-group-text" for="student-display-name"> <i class="fa fa-user"></i> </label>
                            </div>
                            <input name="displayName" class="form-control" placeholder="Tên hiển thị" type="text" id="student-display-name">
                        </div> <!-- form-group// -->

                        <div class="form-group input-group col-12 col-md-10">
                            <div class="input-group-prepend">
                                <label class="input-group-text" for="student-phone"> <i class="fa fa-phone"></i> </label>
                            </div>
                            <input name="phone" class="form-control" placeholder="Số điện thoại" type="text" id="student-phone">
                        </div> <!-- form-group// -->
                        <div class="form-group input-group col-12 col-md-10">
                            <div class="input-group-prepend">
                                <label class="input-group-text" for="student-address"> <i class="fas fa-location-arrow"></i> </label>
                            </div>
                            <input name="address" class="form-control" placeholder="Địa chỉ" type="text" id="student-address">
                        </div> <!-- form-group// -->
                        <div class="form-group input-group col-12 col-md-5">
                            <div class="input-group-prepend">
                                <label class="input-group-text" for="student-birthday"> <i class="fas fa-birthday-cake"></i> </label>
                            </div>
                            <input name="birthday" class="form-control" placeholder="Ngày sinh" type="text" onfocus="(this.type='date')" onblur="if(this.value==''){this.type='text'}" id="student-birthday">
                        </div> <!-- form-group// -->
                        <div class="form-group input-group col-12 col-md-5">
                            <div class="input-group-prepend">
                                <label class="input-group-text"> <i class="fas fa-transgender-alt"></i> </label>
                            </div>
                            <select name="gender" class="form-control" id="student-gender">
                                <option value="" disabled selected hidden>Giới tính</option>
                                <option value="0">Nam</option>
                                <option value="1">Nữ</option>
                            </select>
                        </div> <!-- form-group// -->
                    </div>
                    <div class="error-block col-lg-7 col-12">
                            <p class="text-danger text-center" id="student-signup-err-notification"></p>
                        </div>
                    <div class="col-lg-7 col-12 row justify-content-center">
                        <div class="form-group col-12 col-md-10">
                            <button type="submit" class="btn btn-primary btn-block btn-signup-submit" id="btn-student-signup-submit"> Tạo tài khoản  </button>
                        </div> <!-- form-group// --> 
                    </div>     
                    <div class="col-12">
                        <p class="text-center signup-text">Đã có tài khoản? <a href="/login" class="signup-choice">Đăng nhập</a> </p>
                    </div>                                                                 
                </div>
            </form>
        </div>
    </div> <!-- card.// -->
</div>
<!--container end.//-->
