	{{> header}}
{{!-- font-awesome --}}
<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
{{!-- Body profile --}}
<script>
    if(error){
        alert("Sai mật khẩu. Vui lòng nhập lại.");
    }
    else(){
        if(success){
            alert("Mật khẩu đã được thay đổi thành công");
        }
        else()
        {
            alert("Xin chào");
        }
    }
</script>
<div class="container profile">
    <div class="row justify-content-center message-block">
        {{#if error}}
        <div class="alert alert-danger col-6">
            <p class="text-center message">{{error}}</p>
        </div>
        {{else}}
            {{#if success}}
                <div class="alert alert-success col-6">
                    <p class="text-center message">{{success}}</p>
                </div>
            {{else}}
                <div class="col-6">
                    <p class="text-center message"></p>
                </div>
            {{/if}}
        {{/if}}
    </div>
    <div class="row gutters">
        <div class="col-xl-3 col-lg-3 col-md-12 col-sm-12 col-12">
            <div class="card h-100">
                <div class="card-body">
                    <div class="account-settings">
                        <div class="user-profile">
                            <div class="user-avatar">
                                <img class="user-avatar-img"
                                    src="https://bietmaytinh.com/wp-content/uploads/2021/06/cach-cat-anh-hinh-vuong-4.png"
                                    alt="Ảnh đại diện"
                                    onerror="this.src='https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460__480.png'">
                            </div>
                            {{#with profile}}
                            <h4 class="user-name">{{display_name}}</h4>
                            {{/with}}
                            {{#with profile_tutor}}
                            <h4 class="user-name">{{display_name}}</h4>
                            {{/with}}
                            {{#with profile_acc}}
                            <h6 class="user-email">{{email}}</h6>
                            {{/with}}
                            <button class="btn-change-avatar btn-sm btn-primary mt-3">
                                <i class="fa fa-fw fa-camera"></i>
                                <span>Đổi avatar</span>
                            </button>
                            <div class="form-change-avatar d-none">
                                <form action="" method="POST" class="card card-body" enctype="multipart/form-data">
                                    <div class="form-group mb-3">
                                        <input type="file" class="form-control" name="avatar">
                                    </div>
                                    <div class="form-group mb-3">
                                        <button type="submit" class="btn btn-success mb-3">Lưu</button>
                                    </div>
                                </form>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-9 col-lg-9 col-md-12 col-sm-12 col-12">
            <div class="card h-100">
                <div class="card-body">
                    <h4 class="text-info">Thông tin tài khoản</h4>

                    {{#with profile}}
                    <form class="form-change-infor" action="/profile/change-info" method="POST">
                        <div class="form-group mb-3">
                            <label for="ffullname" class="form-label">Họ tên</label>
                            <input type="text" class="form-control" id="ffullname" value="{{fullname}}" name="ffullname"
                                required>
                        </div>
                        <div class="form-group mb-3">
                            <label for="fdisplayname" class="form-label">Tên hiển thị</label>
                            <input type="text" class="form-control" id="fdisplayname" value="{{display_name}}" name="fdisplayname"
                                required>
                        </div>
                        <div class="form-group mb-3">
                            <label for="fphone" class="form-label">Số điện thoại</label>
                            <input type="tel" class="form-control" id="fphone" name="fphone" value={{phone}}>
                        </div>

                        <div class="form-group mb-3">
                            <label for="fphone" class="form-label">Ngày sinh</label>
                            <input type="date" class="form-control" id="fbirthday" name="fbirthday" value={{birthday}}>
                        </div>
                        {{!-- <div class="form-group mb-3">
                            <label for="fmail" class="form-label">Email</label>
                            <input type="email" class="form-control" id="fmail" name="mail" value="abc@gmail.com">
                        </div> --}}
                        <div class="form-group mb-3">
                            <label for="faddress" class="form-label">Địa chỉ</label>
                            <input type="text" class="form-control" id="faddress" value="{{address}}" name="faddress">
                        </div>
                        {{/with}}

                        {{#with profile_tutor}}
                    <form class="form-change-infor" action="/profile/change-info" method="POST">
                        <div class="form-group mb-3">
                            <label for="ffullname" class="form-label">Họ tên</label>
                            <input type="text" class="form-control" id="ffullname" value="{{fullname}}" name="ffullname"
                                required>
                        </div>
                        <div class="form-group mb-3">
                            <label for="fdisplayname" class="form-label">Tên hiển thị</label>
                            <input type="text" class="form-control" id="fdisplayname" value="{{display_name}}" name="fdisplayname"
                                required>
                        </div>
                        <div class="form-group mb-3">
                            <label for="fphone" class="form-label">Số điện thoại</label>
                            <input type="tel" class="form-control" id="fphone" name="fphone" value={{phone}}>
                        </div>

                        <div class="form-group mb-3">
                            <label for="fphone" class="form-label">Ngày sinh</label>
                            <input type="date" class="form-control" id="fbirthday" name="fbirthday" value={{birthday}}>
                        </div>
                        {{!-- <div class="form-group mb-3">
                            <label for="fmail" class="form-label">Email</label>
                            <input type="email" class="form-control" id="fmail" name="mail" value="abc@gmail.com">
                        </div> --}}
                        <div class="form-group mb-3">
                            <label for="faddress" class="form-label">Địa chỉ</label>
                            <input type="text" class="form-control" id="faddress" value="{{address}}" name="faddress">
                        </div>

                        <div class="form-group mb-3">
                            <label for="fgrade" class="form-label">Lớp dạy</label>
                            <input type="text" class="form-control" id="fgrade" value="{{grade}}" name="fgrade">
                        </div>
                        
                        <div class="form-group mb-3">
                            <label for="fsubject" class="form-label">Môn dạy</label>
                            <input type="text" class="form-control" id="fsubject" value="{{subject}}" name="fsubject">
                        </div>

                        <div class="form-group mb-3">
                            <label for="ftime" class="form-label">Thời gian dạy</label>
                            <input type="text" class="form-control" id="ftime" value="{{time}}" name="ftime">
                        </div>

                        <div class="form-group mb-3">
                            <label for="farea" class="form-label">Quận dạy</label>
                            <input type="text" class="form-control" id="farea" value="{{area}}" name="farea">
                        </div>

                        <div class="form-group mb-3">
                            <label for="fmin_salary" class="form-label">Lương yêu cầu ít nhất</label>
                            <input type="number" class="form-control" id="fmin_salary" value="{{min_salary}}" name="fmin_salary">
                        </div>

                        <div class="form-group mb-3">
                            <label for="fjob" class="form-label">Công việc hiện tại</label>
                            <input type="text" class="form-control" id="fjob" value="{{job}}" name="fjob">
                        </div>


                        {{/with}}

                        {{#with profile_acc}}
                        <input type="number" name="faccount_id" id="faccount_id" value={{account_id}} hidden>
                        {{/with}}
                        <div class="form-group mb-3 text-right submit-change-info d-none">
                            <a href="../" type="button" class="btn btn-secondary mb-3">Hủy</a>
                            <button type="submit" class="btn btn-success mb-3">Lưu</button>
                        </div>

                        
                    </form>

                    <h5 class="text-info change-password">
                        <span>Đổi mật khẩu</span>
                        <i class="fa fa-angle-down ml-2"></i>
                    </h5>
                    <form action="/profile/change-password" method="POST" class="form-change-password d-none">
                        <div class="row">
                            <div class="col">
                                <div class="form-group">
                                    <label>Mật khẩu hiện tại</label>
                                    <input class="form-control cur-password" type="password"
                                        placeholder="Nhập mật khẩu hiện tại" 
                                        id="present_password" name = "present_password"
                                        required>
                                    {{#with profile_acc}}
                                    <input id="email_for_cp" type="email" name="email_for_cp" value={{email}} hidden
                                    class="form-control cur-password"
                                    >
                                    
                                    {{/with}}
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <div class="form-group">
                                    <label>Mật khẩu mới</label>
                                    <input class="form-control new-password" type="password"
                                        id="new_password" name = "new_password"
                                        placeholder="Nhập mật khẩu mới"  required>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <div class="form-group">
                                    <label>Xác nhận mật khẩu mới</label>
                                    <input class="form-control renew-password" type="password"
                                        id="confirm_password" name = "confirm_password"
                                        placeholder="Nhập lại mật khẩu mới" required>
                                </div>
                            </div>
                        </div>
                        <p class="mes-password" style="color: red"></p>
                        <div class="text-right">
                            <button type="button" class="btn btn-success mb-3 btn-change-password">Lưu</button>
                        </div>
                    </form>
