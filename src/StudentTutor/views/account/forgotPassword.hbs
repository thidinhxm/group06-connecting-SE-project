<div class="login-form forgot-form">
    <div class="row justify-content-center message-block">
        {{#if error}}
        <div class="alert alert-danger col-6">
            <p class="text-center message">{{error}}</p>
        </div>
        {{else}}
            {{#if success}}
                <div class="alert alert-success col-6">
                    <p class="text-center message">{{success}}</p>
                </div>
            {{else}}
                <div class="col-6">
                    <p class="text-center message"></p>
                </div>
            {{/if}}
        {{/if}}
    </div>
    <div class="row justify-content-around">
        <div class="col-lg-4 col-md-5 col-12">
            <div class="card">
                <article class="card-body">
                    <h4 class="card-title text-center mb-4 mt-1">Quên mật khẩu</h4>
                    <hr />
                    <br />
                    <form action="/forgot-password" method="POST" id="form-forgot-password">
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <label class="input-group-text" for="email-forgot-password"> <i class="fa fa-envelope"></i> </label>
                                </div>
                                <input name="email" class="form-control" placeholder="Email" type="email" id="email-forgot-password">
                            </div> <!-- input-group.// -->
                        </div> <!-- form-group// -->
                        
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block btn-login-submit" id="btn-forgot-password-submit">Tiếp tục</button>
                        </div> <!-- form-group// -->
                        <div class="error-block">
                            <p class="text-danger text-center" id="forgot-password-err-notification"></p>
                        </div>
                    </form>
                        <p class="text-center login-text">Đã nhớ mật khẩu?<a href="/login" class="login-choice"> Đăng nhập</a></p>
                </article>
            </div>
        </div>
        <div class="col-lg-4 col-md-5 col-10" > 
            <img src="/img/forgot_password.svg" alt="" class="svg-image">
        </div>
    </div>
</div>

