	{{> header}}
<div class="container post-container">
    <div class="row align-items-start">
        <div class="col id-col ">
            <div class="btn id-content">
                <h6>{{post.post_id}}</h6>
            </div>
        </div>
    </div>

    <div class="content-post row ">
        <form action="post/edit/{{post.post_id}}" method="post">

            <div class="row criteria-line ">

                <div class="col-4 criteria-title ">Lớp</div>
                <input class="col" type="text" id="grade" name="grade" value="{{post.grade}}" required>
            </div>


            <div class="row criteria-line">
                <div class="col-4 criteria-title ">Môn học</div>
                <input class="col" type="text" id="subject" name="subject" value="{{post.subject}}" required>


            </div>


            <div class="row criteria-line">
                <div class="col-4 criteria-title">Mức lương/h</div>
                <input class="col" type="text" id="salary" name="salary" value="{{post.salary}}" required>


            </div>

            <div class="row criteria-line">
                <div class="col-4 criteria-title">Địa chỉ</div>
                <input class="col" type="text" id="address" placeholder="" name="address" value="{{post.address}}"
                    required>

            </div>

            <div class="row criteria-line">
                <div class="col-4 criteria-title">Yêu cầu khác</div>
                <textarea class="col" id="more" name="other_request" rows="3" cols="200 "
                    wrap="soft ">{{post.other_request}}</textarea>
            </div>

            <div class="row criteria-line ">
                <div class="col-4 criteria-title ">Trạng thái</div>
                <div class="col-5 ">

                    <select class="form-select " aria-label="Default select example" name="status">
                        <option value=" " {{#ifStr postStatus "Chưa duyệt"}} selected {{/ifStr}}>Đang chờ duyệt</option>
                        <!-- <option selected>Đang chờ duyệt</option> -->
                        <option value="1" {{#ifStr postStatus "Hoàn thành"}} selected {{/ifStr}}>Hoàn thành</option>
                        <option value="2" {{#ifStr postStatus "Chưa duyệt"}} selected {{/ifStr}}>Đang chờ duyệt</option>
                        <option value="3" {{#ifStr postStatus "Từ chối"}} selected {{/ifStr}}>Từ chối</option>
                    </select>
                </div>
            </div>
            <button type="submit " class="btn btn-block text-uppercase btn-edit-post col-4 ">Lưu thay đổi</button>
        </form>
    </div>
</div>
{{> footer}}
