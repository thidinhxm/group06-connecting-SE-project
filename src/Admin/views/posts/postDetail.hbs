
{{> header}}
<div class="container post-container">
    <div class="row align-items-start">
        <div class="col id-col ">
            <div class="btn id-content">
                <h6>{{post.post_id}}</h6>
            </div>
        </div>
    </div>

    <div class="content-post row ">
        {{#with post}}
        <form action="/posts/edit/{{post_id}}" method="post">

            <div class="row criteria-line ">

                <div class="col-4 criteria-title ">Lớp</div>
                <input class="col" type="text" id="grade" name="grade" value="{{grade}}" required>
            </div>


            <div class="row criteria-line">
                <div class="col-4 criteria-title ">Môn học</div>
                <input class="col" type="text" id="subject" name="subject" value="{{subject}}" required>


            </div>


            <div class="row criteria-line">
                <div class="col-4 criteria-title">Mức lương/h</div>
                <input class="col" type="text" id="salary" name="salary" value="{{salary}}" required>


            </div>

            <div class="row criteria-line">
                <div class="col-4 criteria-title">Địa chỉ</div>
                <input class="col" type="text" id="address" placeholder="" name="address" value="{{address}}"
                    required>

            </div>

            <div class="row criteria-line">
                <div class="col-4 criteria-title">Yêu cầu khác</div>
                <textarea class="col" id="more" name="other_request" rows="3" cols="200 "
                    wrap="soft ">{{other_request}}</textarea>
            </div>

            <div class="row criteria-line ">
                <div class="col-4 criteria-title ">Trạng thái</div>
                <div class="col-5 ">

                    <select class="form-select " aria-label="Default select example" name="status">
                        {{#if (compareStatus status "Chưa giao")}}
                        <option value="Chưa giao" selected>Chưa giao</option>
                        <option value="Đã giao" >Đã giao</option>
                        {{else}}
                        <option value="Đã giao" selected>Đã giao</option>
                        <option value="Chưa giao" >Chưa giao</option>
                        {{/if}}
                    </select>
                </div>
            </div>
            <button type="submit " class="btn btn-block text-uppercase btn-edit-post col-4 ">Lưu thay đổi</button>
        </form>
        {{/with}}
    </div>
</div>
{{> footer}}
