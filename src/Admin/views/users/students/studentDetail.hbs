	{{> header}}
<div class="container mt-5">
    <div class="row tm-content-row">
        <div class="col-12 tm-block-col">
            <div class="page-title">
                <span>Tài khoản học sinh</span>
            </div>
        </div>
    </div>
    <!-- row -->
    <div class="row tm-content-row">
        <div class="tm-block-col tm-col-avatar">
            <div class="tm-bg-primary-dark tm-block tm-block-avatar">
                <h2 class="tm-block-title">Ảnh đại diện</h2>
                <div class="tm-avatar-container">
                    <img src="/img/user_avatar.png" alt="Avatar" class="tm-avatar img-fluid mb-4" />
                </div>
            </div>
        </div>
        <div class="tm-block-col tm-col-account-settings">
            <div class="tm-bg-primary-dark tm-block tm-block-settings">
                <h2 class="tm-block-title">Thông tin tài khoản</h2>
                <div class="about">
                    {{#with student}}
                    <div class="row">
                        <div class="col-3 col-sm-4">
                            <label>Tên hiển thị:</label>
                        </div>
                        <div class="col-9 col-sm-8">
                            <p>{{display_name}}</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-3 col-sm-4">
                            <label>Họ và tên : </label>
                        </div>
                        <div class="col-9 col-sm-8">
                            <p>{{fullname}}</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-3 col-sm-4">
                            <label>Email : </label>
                        </div>
                        <div class="col-9 col-sm-8">
                            <p>{{'student_account.email'}}</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-3 col-sm-4">
                            <label>Số điện thoại : </label>
                        </div>
                        <div class="col-9 col-sm-8">
                            <p>{{phone}}</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-3 col-sm-4">
                            <label>Địa Chỉ : </label>
                        </div>
                        <div class="col-9 col-sm-8">
                            <p>{{address}}</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-3 col-sm-4">
                            <label>Ngày sinh : </label>
                        </div>
                        <div class="col-9 col-sm-8">
                            <p>{{birthday}}</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-3 col-sm-4">
                            <label>Trạng thái : </label>
                        </div>
                        <div class="col-9 col-sm-8">
                            <p>
                                {{#if is_locked}}
                                    Bị khóa
                                {{else}}
                                    Được hoạt động
                                {{/if}}
                            </p>
                            
                        </div>
                    </div>
                    {{/with}}
                </div>
            </div>
        </div>
    </div>
</div>