<div class="container mt-5">
	<div class="page-title">
		<span>Tài khoản gia sư</span>
	</div>	
	<div class="col-12 ">
		<div class="tm-bg-primary-dark ">
			
			<table class="table">
				<thead>
					<tr>
						<th scope="col">ID</th>
						<th scope="col">Họ và tên</th>
						<th scope="col">Địa chỉ</th>
						<th scope="col">Số điện thoại</th>
						<th scope="col">Ngày sinh</th>
						<th>Trạng thái</th>
					</tr>
				</thead>
				<tbody>
					{{#each tutors}}
					<tr>
						<th scope="row"><b>{{tutor_id}}</b></th>
						<td><b>{{fullname}}</b></td>
						<td><b>{{address}}</b></td>
						<td><b>{{phone}}</b></td>
						<td><b>{{birthday}}</b></td>
						<td>
							<button class="btn-open">
								{{#if is_locked}}
									<i class="fas fa-lock"></i>
								{{else}}
									<i class="fas fa-lock-open"></i>
								{{/if}}
							</button>
						</td>
					</tr>
					{{/each}}
					<tr>
						<th scope="row"><b>#122348</b></th>
						<td><b>Lê An Khương</b></td>
						<td><b>BRVT</b></td>
						<td><b>0879221443</b></td>
						<td><b>13/04/2002</b></td>
						<td><button class="btn-open"><i class="fas fa-lock"></i></button></td>
					</tr>
					
				</tbody>
			</table>
		</div>
	</div>
